<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/About"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.AboutDoc">

    <View
        android:id="@+id/view6"
        android:layout_width="410dp"
        android:layout_height="158dp"
        android:background="@drawable/hedhi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="236dp"
        android:layout_height="39dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="148dp"
        android:text="About"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="286dp"
        android:layout_height="169dp"
        android:hint="Description"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/tertiary_text_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793" />

    <TextView
        android:id="@+id/first"
        android:layout_width="255dp"
        android:layout_height="38dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="84dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

    <TextView
        android:id="@+id/last"
        android:layout_width="256dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="80dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Analysebtn"
        android:layout_width="279dp"
        android:layout_height="44dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:background="#00A79B"
        android:text="Send Analyse"
        android:textColor="@color/design_default_color_background"
        android:textColorHint="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>